<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_25sdp"
        android:id="@+id/im"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Log In"/>







    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:id="@+id/rl"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_alignTop="@+id/user_profile_photo"
        android:layout_centerHorizontal="true">




        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"

            android:weightSum="1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_above="@+id/ll"
                android:layout_marginTop="@dimen/_20sdp"
                android:weightSum="2">




                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cdSeller"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        >



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_15sdp"
                            android:layout_gravity="center"
                            android:id="@+id/tvSeller"
                            android:textColor="#646464"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:text="Seller"/>


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:id="@+id/lineSeller"
                            android:background="#67cc97"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    android:id="@+id/cdBuyer"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_weight="1">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_15sdp"
                            android:layout_gravity="center"
                            android:id="@+id/tvBuyer"
                            android:textColor="#d2d2d2"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:text="Buyer"/>


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:id="@+id/lineBuyer"
                            android:background="#d2d2d2"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/profile_97"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_height="match_parent" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/editText1">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="#D1D1D1"
                        android:hint="Email Address"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/password_97"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_height="match_parent"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:passwordToggleEnabled="false"
                    android:id="@+id/editText2">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:backgroundTint="#D1D1D1"

                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>








            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingTop="5dp"
                android:textSize="15dp"
                android:textAlignment="textEnd"
                android:id="@+id/forget"
                android:visibility="gone"
                android:text="Forgot Password?" />




            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:textAllCaps="false"
                android:background="@drawable/button_white"
                android:onClick="buttonIsClicked"
                android:text="Log In"
                android:textSize="@dimen/_15sdp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:id="@+id/tvSignUp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Already have an account? Sign Up"/>

            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:background="@color/colorPrimary"
                android:onClick="buttonIsClicked"
                android:text="Register"
                android:visibility="gone"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />


        </LinearLayout>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/user_profile_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:elevation="4dp"
        android:scaleType="centerCrop"
        android:padding="5dp"
        android:background="#fff"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>