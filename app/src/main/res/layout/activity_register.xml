<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="@dimen/_10sdp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_30sdp"
        android:id="@+id/im"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_40sdp"
        android:text="Sign Up"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/ll"
        android:layout_marginTop="@dimen/_20sdp"
        android:weightSum="2">




        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cdSeller"
            android:elevation="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginRight="@dimen/_35sdp"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:id="@+id/tvSeller"
                    android:textColor="#646464"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="Seller"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:id="@+id/lineSeller"
                    android:background="#67cc97"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:id="@+id/cdBuyer"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginRight="@dimen/_35sdp"
                android:layout_weight="1">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:id="@+id/tvBuyer"
                    android:textColor="#d2d2d2"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="Buyer"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:id="@+id/lineBuyer"
                    android:background="#d2d2d2"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:padding="10dp"
        android:id="@+id/ll"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#FFFFFF"

        android:weightSum="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/email34"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/etEmail">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTint="#FF4081"

                    android:hint="Email Address"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/lock1"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:passwordToggleEnabled="true"
                android:id="@+id/etP">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="#FF4081"
                    android:hint="Password"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.17">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/lock1"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/etCP">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTint="#FF4081"
                    android:hint="Confirm Password"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textAllCaps="false"
            android:background="@drawable/button_white"
            android:onClick="buttonIsClicked"
            android:text="Sign Up"
            android:textSize="@dimen/_15sdp"
            android:textColor="#FFFFFF" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/tvLogin"
            android:text="Already have an account? Log In"/>

    </LinearLayout>



</RelativeLayout>